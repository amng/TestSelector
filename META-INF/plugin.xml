<idea-plugin version="2">
  <id>com.yourcompany.unique.plugin.id</id>
  <name>TestChooser</name>
  <version>1.1.0</version>
  <vendor email="arturngomes@gmail.com"></vendor>

  <description><![CDATA[
      Select which tests you want to run in android Espresso.
    ]]></description>

  <change-notes><![CDATA[
    - Added search box, which allows to filter tests using regex regular expressions.
    - Added popupmenu to checkboxes to scroll to test. (right click popup on checkboxes)
    ]]>
  </change-notes>

  <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="131"/>

  <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <toolWindow id="TestSelector" anchor="right" factoryClass="Main">
    </toolWindow>
  </extensions>

</idea-plugin>